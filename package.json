{
  "name": "sql-batcher",
  "version": "1.0.0",
  "description": "A cross-platform desktop application for batch executing SQL statements across multiple databases and connections",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:react": "webpack --mode production",
    "dev:react": "webpack --mode development --watch",
    "clean": "rm -rf dist/ && rm -rf node_modules/ && npm install",
    "docs": "echo 'Documentation generation placeholder'"
  },
  "keywords": [
    "sql",
    "batch",
    "database",
    "mysql",
    "postgresql",
    "electron",
    "multi-connection",
    "db-management"
  ],
  "author": "SQL Batcher Team",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "mysql2": "^3.0.0",
    "pg": "^8.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^9.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "build": {
    "appId": "com.sqlbatcher.app",
    "productName": "SQL Batcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "src/**/*",
      "data/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon.png"
    }
  }
}